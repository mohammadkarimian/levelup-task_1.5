{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "typeRoots": ["./@types","./node_modules/@types"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": true,
    "pretty": true,
    "lib": [
      "esnext"
    ]
  }
}
